{
    "compilerOptions": {
      "allowJs": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "preserve",
      "lib": ["dom", "es2019"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "es6",
      "baseUrl": ".",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
    },
    "include": [
      "src/**/*",
      "src/data/*.json"
    ]
  }